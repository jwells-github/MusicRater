@model ICollection<Release>
    <table class="releaseTable">
        <tr>
            <th class="tableIcon"></th>
            <th class="tableName">
                Release Name
            </th>
            <th class="tableReviewNo">
                Reviews
            </th>
            <th class="tableRatingNo">
                Ratings
            </th>
            <th class="tableRatingAvg">
                Rating
            </th>
        </tr>
        @foreach (Release release in Model.OrderBy(r => r.FormattedDate))
        {
            <tr class="releaseTableRow">
                <td class="tableIcon">
                    <div  style="@release.GetBackgroundCSS()">
                        <a asp-controller="Release" asp-action="Entry" asp-route-id="@release.Id"></a>
                    </div>
                </td>
                <td class="tableName">
                    <div>
                        <a asp-controller="Release" asp-action="Entry" asp-route-id="@release.Id">@release.Title</a>
                        <span>@release.FormattedDate.ToString("yyyy")</span>
                    </div>
                    
                </td>
                <td class="tableReviewNo">@release.NumberOfReviews</td>
                <td class="tableRatingNo">@release.NumberOfRatings</td>
                <td class="tableRatingAvg">@(release.AverageRating > 0 ? release.AverageRating.ToString() : "")</td>
            </tr>
        }
    </table>
