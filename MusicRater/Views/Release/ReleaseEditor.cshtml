@model ReleaseViewModel

 
@{ 
    Layout = "_Layout";
    int minimumYear = 1855;
    int maximumYear = DateTime.Now.Year + 1;
}


<form method="post">
    <div class="form-group">
        <label>Artist Name</label>
        <input class="form-control" value="@Model.Artist.Name" disabled />
    </div>
    <div class="form-group">
        <label>Artist ID</label>
        <input class="form-control" value="@Model.Artist.Id" disabled />
    </div>
    <div class="form-group">
        <label asp-for="Release.Title"></label>
        <input class="form-control" asp-for="Release.Title" />
    </div>
    <div class="form-group">
        <label asp-for="Release.ReleaseDay"></label>
        <select asp-for="Release.ReleaseDay">
            <option value="0"></option>
            @for(var i = 1; i <= 31; i++)
                { <option value="@i">@i</option> }
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Release.ReleaseMonth"></label>
        <select asp-for="Release.ReleaseMonth" asp-items="MonthSelectList.GetMonthList()">
            <option value="0"></option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Release.ReleaseYear"></label>
        <select asp-for="Release.ReleaseYear">
            <option value="0"></option>
            @for (var i = maximumYear; i >= minimumYear; i--)
                {<option value="@i">@i</option>}
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Release.Type"></label>
        <select class="form-control" asp-for="Release.Type" asp-items="@(Html.GetEnumSelectList<ReleaseType>())"></select>
    </div>

    <button class="btn btn-primary" type="submit">Submit</button>
</form>
