@model PaginatedList<Artist>

<partial name="_SearchHeaderPartial">

    <h2>Artists</h2>
    @if (Model.Count > 0)
    {
        var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
        var nextDisabled = !Model.HasNextPage ? "disabled" : "";

        @foreach (Artist artist in Model)
        {
            <div>
                <a asp-action="Profile" asp-controller="Artist" asp-route-id="@artist.ArtistID">@artist.Name</a>
            </div>
        }

        <a asp-action="Artist"
           asp-route-searchTerm="@Context.Request.Query["searchTerm"]"
           asp-route-pageNumber="@(Model.PageIndex - 1)"
           class="btn btn-default @prevDisabled">
            Previous
        </a>
        <a asp-action="Artist"
           asp-route-searchTerm="@Context.Request.Query["searchTerm"]"
           asp-route-pageNumber="@(Model.PageIndex + 1)"
           class="btn btn-default @nextDisabled">
            Next
        </a>
    }
    else
    {
        <h3>No Results</h3>
    }
