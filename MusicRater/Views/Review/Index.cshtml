@model PaginatedList<ReleaseReview>

@if (Model.Count > 0)
{
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";

    @foreach (ReleaseReview releaseReview in @Model)
    {
        <h1>@releaseReview.Release.Title</h1>
        <h2>@releaseReview.Release.Artist.Name</h2>
        <h3>@releaseReview.Title</h3>
        <p>@releaseReview.ReviewText</p>
        <p>@releaseReview.ReviewDate</p>
    }
    <a asp-action="Artist"
       asp-route-searchTerm="@Context.Request.Query["searchTerm"]"
       asp-route-pageNumber="@(Model.PageIndex + 1)"
       class="btn btn-default @prevDisabled">
        Previous
    </a>
    <a asp-action="Artist"
       asp-route-searchTerm="@Context.Request.Query["searchTerm"]"
       asp-route-pageNumber="@(Model.PageIndex + 1)"
       class="btn btn-default @nextDisabled">
        Next
    </a>
}